<div class="row">
  <div class="small-12 large-8 columns">
    <h3>All Locations</h3>

    <div class="datatable">
      <table id="locations" class="display">
          <thead>
              <tr>
                  <th>Location Name</th>
                  <th>Lat/Long [if supplied]</th>
              </tr>
          </thead>
          <tbody>
    <% @locations.each do |location| %>
      <tr>
          <td><%= link_to "#{location.name}", location_path(location) %></td>
          <td><%= location.latitude %>/<%= location.longitude %></td>
      </tr>
      <% end %>
          </tbody>
      </table>
      <br>
    </div>

    <div class="links">
      <div><%= link_to "Add new location", new_location_path, class: 'button' %></div>
    </div>
  </div>
</div>
