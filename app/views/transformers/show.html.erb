<div class="row">


<h3>Transformer show page for Name: <%= @transformer.name %></h3>
  <ul>
    <li><strong>Transformer id: <%= @transformer.id %></strong> </li>
  </ul>

<h4>Samples: </h4>
  <ul>
    <% @samples.each do |sample| %>
      <li>Sample name: <%= link_to "#{sample.date}", root_path %></li>
    <% end %>
  </ul>

<ul><%= link_to "See Parent Location", location_path(@transformer.location) %></ul>

<div class="links">
  <ul><%= link_to "add sample", new_transformer_sample_path(@id) %></ul>

  <ul><%= link_to "back to all transformers", transformers_path %></ul>
  <ul><%= link_to "back to home", root_path %></ul>
</div>
</div>
